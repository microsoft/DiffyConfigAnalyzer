{
  "mysqld": {
    "default-storage-engine": "InnoDB",
    "datadir": "/opt/mysql/data",
    "tmpdir": "/opt/mysql/tmp",
    "socket": "/opt/mysql/mysql.sock",
    "skip-external-locking": "1",
    "skip-name-resolve": "",
    "open-files-limit": "20000",
    "event-scheduler": "1",
    "thread-cache-size": "16",
    "table-open-cache": "2048",
    "table-definition-cache": "512",
    "query-cache-size": "0",
    "query-cache-limit": "1M",
    "table_cache": "256",
    "thread_cache_size": "16",
    "sort-buffer-size": "1M",
    "read-buffer-size": "1M",
    "read-rnd-buffer-size": "8M",
    "join-buffer-size": "1M",
    "tmp-table-size": "64M",
    "max-heap-table-size": "64M",
    "back-log": "100",
    "max-connections": "1200",
    "max-connect-errors": "10000",
    "max-allowed-packet": "256M",
    "interactive-timeout": "1209600",
    "wait-timeout": "1209600",
    "innodb": "FORCE",
    "key-buffer-size": "64M",
    "myisam-sort-buffer-size": "128M",
    "innodb-buffer-pool-size": "256M",
    "innodb-additional-mem-pool-size": "20M",
    "innodb-log-file-size": "100M",
    "innodb_log_files_in_group": "2",
    "innodb-log-buffer-size": "4M",
    "innodb_stats_on_metadata": "0",
    "server-id": "1",
    "log-bin": "/opt/mysql/logs/bin-log",
    "expire-logs-days": "3",
    "binlog-format": "ROW",
    "slow-query-log": "1",
    "slow-query-log-file": "/opt/mysql/logs/slow.log"
  },
  "client": {
    "socket": "/opt/mysql/mysql.sock"
  },
  "mysqld_safe": {
    "log-error": "/opt/mysql/logs/error.log"
  },
  "mysql": {
    "default-character-set": "utf8"
  },
  "mysqldump": {
    "max_allowed_packet": "256M",
    "quick": ""
  }
}